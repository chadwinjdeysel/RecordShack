@model RecordShack.View_Models.Artist.CreateViewModel

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center my-3 display-4">Create new Artist</h2>

<div class="col-sm-6 mx-auto">

    @using (Html.BeginForm("Create", "Artist", FormMethod.Post, new { enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()

        <div class="form-group my-3">
            @Html.LabelFor(m => m.ArtistName, new { @class = "form-label" })
            @Html.EditorFor(m => m.ArtistName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.ArtistName, null, new { @class = "text-danger" })
        </div>

        <div class="form-group my-3">
            @Html.LabelFor(m => m.ArtistBio, new { @class = "form-label" })
            @Html.TextAreaFor(m => m.ArtistBio, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ArtistBio, null, new { @class = "text-danger" })
        </div>

        <div class="row">
            <div class="form-group my-3 col-md-6">
                @Html.LabelFor(m => m.Image, new { @class = "form-label" })
                <div class="editor-field">
                    <input id="Image" title="Upload an image" type="file" name="Image" />
                </div>
                @Html.ValidationMessageFor(m => m.Image, null, new { @class = "text-danger" })
            </div>

            <div class="form-group my-3 col-md-6">
                @Html.LabelFor(m => m.ImageAlt, new { @class = "form-label" })
                @Html.EditorFor(m => m.ImageAlt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ImageAlt, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group my-4">
            <button type="submit" class="btn btn-primary btn-block">Create</button>
            <p class="text-center my-3">
                @Html.ActionLink("Back to List", "AdminIndex")
            </p>
        </div>
        
    }

</div>

