<div class="dropdown-menu" aria-labelledby="loginDropdown">

    @if (User.Identity.IsAuthenticated)
    {
        <p class="dropdown-item-text">Hello @User.Identity.Name</p>
        <div class="dropdown-divider"></div>
        @Html.ActionLink("Details", "Details", new { controller = "Account" }, new { @class = "dropdown-item" })
        @Html.ActionLink("Sign Out", "SignOut", new { controller = "Account" }, new { @class = "dropdown-item" })
    }
    else
    {
        @Html.ActionLink("Sign In", "SignIn", new { controller = "Account" }, new { @class = "dropdown-item" })
        @Html.ActionLink("Register", "Register", new { controller = "Account" }, new { @class = "dropdown-item" })
    }

</div>
