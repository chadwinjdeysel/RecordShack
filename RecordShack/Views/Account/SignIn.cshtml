@model RecordShack.View_Models.Account.SignInViewModel
    
<div class="col-md-6 mx-auto">
    <div class="card  my-5">
        <div class="card-body">
            <h1 class="display-3 text-center card-title">Sign in</h1>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group my-4">
                    @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                    @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "legend23"}})
                    @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger"})
                </div>

                <div class="form-group my-4">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "password..." } })
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                </div>

                <div class="form-group my-4">
                    @Html.LabelFor(m => m.RemeberMe, new { @class = "form-label" })
                    @Html.CheckBoxFor(m => m.RemeberMe, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(m => m.RemeberMe, null, new { @class = "text-danger" })
                </div>
                
                <div class="form-group my-4">
                    <input type="submit" class="btn btn-primary btn-block" value="Sign in" />
                    <p class="my-3 text-center">
                        <small>@Html.ActionLink("New here? Register new account", "Register", "Account")</small>
                    </p>
                </div>
            }
        </div>
    </div>
    


</div>