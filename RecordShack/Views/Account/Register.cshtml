@model RecordShack.View_Models.Account.RegisterViewModel

<div class="col-md-6 mx-auto">
    <div class="card my-5">
        <div class="card-body">
            <h1 class="display-3 text-center card-title">Register</h1>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="form-group my-3 col-sm-12">
                        @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                        @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "legend23" } })
                        @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group my-3 col-sm-12">
                        @Html.LabelFor(m => m.EmailAddress, new { @class = "form-label" })
                        @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "name@example.com" } })
                        @Html.ValidationMessageFor(m => m.EmailAddress, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group my-3 col-md-6">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "12345 is a bad idea" } })
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group my-3 col-md-6">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                        @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "" } })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group my-3 col-sm-12">
                        <input type="submit" value="Register" class="btn btn-primary btn-block" />
                        <p class="my-3 text-center">
                            <small>@Html.ActionLink("Already have an account? Sign in here", "SignIn", "Account")</small>
                        </p>
                    </div>
                </div>
                
            }
        </div>
    </div>
</div>
